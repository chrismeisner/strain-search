{
  "name": "strain-search",
  "version": "1.0.1",
  "description": "A simple web app to search strains, deployed on Heroku",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",  // For local development with automatic restarts
    "build": "npm install",      // Ensures dependencies are installed
    "heroku-postbuild": "npm install" // Ensures dependencies are installed after Heroku build
  },
  "keywords": [
    "strain",
    "search",
    "heroku",
    "express"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.1",
    "axios": "^1.4.0",  // Ensure axios is listed since it is used in server.js
    "dotenv": "^16.1.4" // Ensure dotenv is included for environment variables
  },
  "devDependencies": {
    "nodemon": "^2.0.22" // For easier local development
  },
  "engines": {
    "node": ">=14.x"  // Specify Node version compatibility (Heroku uses this)
  }
}
